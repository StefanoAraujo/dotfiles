!after editing .Xdefaults it may be reloaded with:
!xrdb -load ~/.Xdefaults

! ROFI
! Enable the extended coloring options
rofi.color-enabled: true

!                  bg       border   separator
rofi.color-window: #000000, #111111, #000000

!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #000000, #cccccc, #000000, #000000, #ffffff
rofi.color-active: #000000, #cccccc, #000000, #000000, #ffffff
rofi.color-urgent: #000000, #cccccc, #000000, #000000, #ffffff

rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.lines: 10
rofi.font: Jetbrains Mono 16
rofi.bw: 3
rofi.width: 50%
rofi.columns: 2
rofi.padding: 40
rofi.fixed-num-lines: true
rofi.hide-scrollbar: true
